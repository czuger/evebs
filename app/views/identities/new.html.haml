%head
  = csrf_meta_tags


-# TODO : il y a plusieurs id sign in. Pas bien
#login_area
  = form_tag "/auth/identity/register" do
    %table.sign_in_table
      %tr
        %td
          - if @identity && @identity.errors.any?
            %div{:class => 'error_messages'}
              -#%h2
              -#  = pluralize(@identity.errors.count, 'error')
              -#  prohibited this account from being saved:
              %ul
                - @identity.errors.full_messages.each do |msg|
                  %li= msg
      %tr
        %td
          %span.sign_in_class.sign_in_class_extended
            Enter your informations
      %tr
        %td
          %span.sign_in_class.sign_in_class_extended
            %span
              = label_tag :name
            %span.credential_span_input_class
              = text_field_tag :name, @identity.try(:name), class: :credential_input_class
      %tr
        %td
          %span.sign_in_class.sign_in_class_extended
            %span
              = label_tag :email
            %span.credential_span_input_class
              = text_field_tag :email, @identity.try(:email), class: :credential_input_class
      %tr
        %td
          %span.sign_in_class.sign_in_class_extended
            %span
              = label_tag :password
            %span.credential_span_input_class
              = password_field_tag :password, nil, class: :credential_input_class
      %tr
        %td
          %span.sign_in_class.sign_in_class_extended
            %span
              = label_tag :password_confirmation, 'Confirmation'
            %span.credential_span_input_class
              = password_field_tag :password_confirmation, nil, class: :credential_input_class
      %tr
        %td{ colspan: 2 }
          .log_in_span_input_class
            = submit_tag 'Log in'

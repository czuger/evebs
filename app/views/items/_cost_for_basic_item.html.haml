%table.table
  %thead
    %tr
      %th.text-center Day
      %th.text-right Cost
      %th.text-right Volume
      %th.text-center Date
      %th.text-center Order id
  %tbody
    - @sales_final_detail.each do |sfd|
      %tr
        %td.text-center
          = sfd.day
        %td.text-right
          = print_isk sfd.price
        %td.text-right
          = print_volume sfd.volume.round
        %td.text-center
          = sfd.updated_at
        %td.text-center
          = sfd.order_id


= will_paginate @sales_final_detail
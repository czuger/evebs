.container

  .row.my-4
    .col-1
      = image_tag( "https://imageserver.eveonline.com/Type/#{@item.cpp_eve_item_id}_64.png" )
    .col
      %h3.mt-3
        = @item.name

  .row.my-4
    .col
      = link_to( "Production cost : #{print_isk( @item.cost )}", item_cost_path( @item ) )
    .col
      = link_to( "Jita min price : #{print_isk( @jita_min_price.min_price )}", item_trade_hub_detail_path( @item, trade_hub_id: @jita.id ) )
    .col
      = link_to( 'Markets details', item_market_overview_path( @item ) )


  .row.my-4
    .col
      = raw @item.description

  .row.my-4
    .col
      Volume :
      = @item.volume
      m2

    .col
      Volume packaged :
      = @item.additional_information['packaged_volume']
      m2

    .col
      Mass :
      = @item.additional_information['mass']
      kg

  .row.my-4
    .col
      More details at :
      = link_to( 'eveinfo.com', "https://eveinfo.com/item/#{@item.cpp_eve_item_id}", :target => '_blank' )


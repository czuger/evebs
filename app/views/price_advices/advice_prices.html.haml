.order_advice_containers

  - if @trade_hubs_names && @item_names
    Trade hubs
    = select( 'select', 'trade_hubs', @trade_hubs_names, {include_blank: 'All'} )
    %br
    Items
    = select( 'select', 'items', @item_names, {include_blank: 'All'} )

  %h2
    Margin lists

  %table
    %tr
      %td.daily_information Daily information
      %td.monthly_information Monthly information
  %table
    %tr
      %th{colspan:4}
      %th.white_borders{colspan:2} Min Margin
      %th
      %th Min
      %th Min
      %th
      %th Avg
    %tr
      %th
      %th Trade hub
      %th Item
      %th Amount sold
      %th pcent
      %th amount
      %th For
      %th cost
      %th price
      %th diff
      %th price
    - @prices_array.each do |item|
      %tr{ class: cycle( :odd, :even ) }
        %td= shopping_basket_check_box( item )
        %td.trade_hub_name=item[:trade_hub]
        %td.item_name= link_to( item[:eve_item], price_advices_show_item_detail_path( item[:eve_item_id] ) )
        %td.cell_right_align.monthly_information=print_volume(item[:monthly_amount])
        %td.cell_center_align.daily_information="#{item[:benef_pcent]}%"
        %td.cell_right_align.daily_information=print_isk(item[:benef])
        %td.cell_right_align.daily_information=item[:batch_size]
        %td.cell_right_align.daily_information=print_isk(item[:cost])
        %td.cell_right_align.daily_information=print_isk(item[:min_price])
        %td.cell_right_align.daily_information=print_pcent(item[:diff_between_daily_min_and_monthly_min_pcent])
        %td.cell_right_align.monthly_information=print_isk(item[:monthly_avg_price])

-#.order_advice_containers

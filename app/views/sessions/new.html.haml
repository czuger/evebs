%head
  = csrf_meta_tags

-# TODO : il y a plusieurs id sign in. Pas bien
#login_area
  = form_tag "/auth/identity/callback" do
    %table.sign_in_table
      %tr
        %td
          = link_to "/auth/facebook", id: "sign_in" do
            %span#facebook_icon
            %span
              Sign up using Facebook
      %tr
        %td
          = link_to :new_identity, class: :sign_in_class do
            %span
            %span
              Create credentials
      %tr
        %td
          %span.sign_in_class
            %span
              = label_tag :auth_key, 'Email:'
            %span.credential_span_input_class
              = text_field_tag :auth_key, nil, class: :credential_input_class
      %tr
        %td
          %span.sign_in_class
            %span
              = label_tag :password, 'Password:'
            %span.credential_span_input_class
              = password_field_tag :password, nil, class: :credential_input_class
      %tr
        %td{ colspan: 2 }
          .log_in_span_input_class
            = submit_tag 'Log in'

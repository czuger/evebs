%head
  = csrf_meta_tags

  .container

    .wrapper

      = form_tag "/auth/identity/callback", class: 'form-signin' do

        %h3.form-signin-heading Sign In with
        %a.btn.btn-lg.btn-block.omb_socialButtons.omb_btn-eve-sso{ :href => '/auth/crest', method: 'get' }
          %span EVE SSO
        %a.btn.btn-lg.btn-block.omb_socialButtons.omb_btn-facebook{ :href => '/auth/facebook', method: 'get' }
          %span Facebook
        %a.btn.btn-lg.btn-block.omb_socialButtons.omb_btn-google{ :href => '/auth/google_oauth2', method: 'get' }
          %span Google
        %hr
        %h5.form-signin-heading User creation is disabled. New users, please login with a Facebook or Google account. Already registered users can still use their account.
        %input.form-control{:autofocus => "", :name => "auth_key", :placeholder => "Email", :required => "", :type => "text"}/
        %input.form-control{:name => "password", :placeholder => "Password", :required => "", :type => "password"}/
        -flash.each do |flash|
          .span.authentication_failed
            = flash.last
        %button.btn.btn-lg.btn-default.btn-block{:name => "Submit", :type => "Submit", :value => "Login"} Login



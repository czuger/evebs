.container

  = form_tag assets_path, method: :put, class: 'form-inline my-4' do
    = label_tag :asset_station_id, 'Assets stations', class: 'mr-3'
    = select_tag( :asset_station_id, options_for_select( @stations_select_data ), class: 'form-control mr-3' )
    = button_tag( 'Set station', class: 'btn btn-secondary' )

    -#.row.mb-3
    -#  .col-3
    -#    Asset stations
    -#  .col-6
    -#    = select_tag( :selected_station_id, options_for_select( @stations_select_data ), class: 'form-control' )
    -#  .col-3
    -#    = button_tag( 'Set station', class: 'btn btn-secondary' )

  %table.table.table-hover.table-sm
    %thead
      %tr
        %th
          Station
        %th
          Asset
        %th.text-right
          Quantity

    %tbody
      - @assets.each do |asset|
        %tr
          %td= asset.station_detail&.name
          %td= asset.blueprint_component.name
          %td.text-right= asset.quantity


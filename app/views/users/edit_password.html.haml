#selection_div

  = form_tag user_change_password_path( :dummy ) do
    - if flash[:errors] && flash[:errors].any?
      #error_explanation
        %h2= "#{pluralize(flash[:errors].count, "error")} prohibited this password from being changed:"
        %ul
          - flash[:errors].each do |msg|
            %li= msg.join( ' : ' )
    - if flash[:success]
      #success_message
        %h2= 'Password changed successfuly'

    .form-group
      = label_tag :new_password
      = password_field_tag :new_password, nil, class: 'form-control'
    .form-group
      = label_tag :new_password_confirmation
      = password_field_tag :new_password_confirmation, nil, class: 'form-control'

    .actions
      = submit_tag 'Save', class: 'btn btn-default'

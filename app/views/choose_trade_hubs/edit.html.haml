.container

  = render partial: 'shared/errors'

  %h3 Check trade hubs you want to monitor


  %hr

  .row
    - @inner_trade_hubs.in_groups(2, false).each do |group|
      .col-md-4
        %table.table.table-bordered
          %tbody
            - group.each do |trade_hub|
              %tr
                %td= check_box_tag("trade_hubs_ids_#{trade_hub.id}",trade_hub.id,@user_trade_hubs_ids.include?(trade_hub.id), class: :trade_hub_update_checkbox)
                %td= trade_hub.name
                %td= "(#{trade_hub.region.name})"

    .col-md-4
      %table.table.table-bordered
        %tbody
          - @outer_trade_hubs.each do |trade_hub|
            %tr
              %td= check_box_tag("trade_hubs_ids_#{trade_hub.id}",trade_hub.id,@user_trade_hubs_ids.include?(trade_hub.id), class: :trade_hub_update_checkbox)
              %td= trade_hub.name
              %td= "(#{trade_hub.region.name})"


= hidden_field_tag :choose_trade_hub, true
.container

  = render partial: 'shared/errors'

  = form_tag edit_list_items_path, method: :get do

    .form-group
      .row
        .col-md-10
          = text_field_tag :filter, @filter, class: 'form-control'

        .col-md-2
          = button_tag :filter, class: 'form-control'

    %table.table.table-bordered
      %thead
        %tr
          %th
            Check
          %th
            Name

      %tbody
        - @items.each do |item|
          %tr
            %th
              = check_box_tag "items[#{item.id}]", 1, @item_ids.include?( item.id ), class: :item_checkbox, item_id: item.id
            %th= item.name

  = will_paginate @items
%table.table.table-hover
  %thead
    %tr
      - if @user
        %th.text-center Selected

      %th
        Name

  %tbody
    - @items.each do |item|
      %tr
        - if @user
          %td.text-center
            = check_box_tag "items[#{item.id}]", 1, @item_ids.include?( item.id ), class: :item_checkbox, item_id: item.id

        %td= link_to( item.name, item_path( item ) )
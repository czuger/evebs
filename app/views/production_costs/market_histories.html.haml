%h3.my-3.text-center
  = link_to( @item.name, item_path( @item ) )

%table.table.my-3
  %thead
    %tr
      %th.text-left Region
      %th.text-right Volume
      %th.text-right Avg price
      %th.text-right Max price
      %th.text-right Min price

  %tbody
    - @market_histories.each do |mh|
      %tr
        %td.text-left
          = mh.region_name
        %td.text-right
          = print_volume mh.volume.round
        %td.text-right
          = print_isk mh.avg_price
        %td.text-right
          = print_isk mh.max_price
        %td.text-right
          = print_isk mh.min_price